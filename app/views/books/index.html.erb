    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>

        <% @books.each do |book| %>
          <div class="book-item">
            <td="book-title"><%= book.title %></td>
            <td="book-body"><%= book.body %></td>
            <td="show-edit-destroy"><%= link_to "show", book_path(book) %></td>
            <td="show-edit-destroy"><%= link_to "edit", edit_book_path(book) %></td>
            <td="show-edit-destroy"><%= link_to "destroy", book_path(book), method: :delete %></td>
          </div>
        <% end %>
  </tbody>
</table>



<h2>New book</h2>


<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>



<% end %>









